# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=

# Optional: Restrict bot to specific user (leave empty to allow all users)
# To get your user ID, send a message to @userinfobot on Telegram
USER_ID=

# GIF for unauthorized users (e.g., a "You shall not pass!" GIF URL)
YOU_SHALL_NOT_PASS=https://media.giphy.com/media/WIg8P0dPmbGXS/giphy.gif

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tracker_v2
DB_USER=postgres
DB_PASSWORD=your_password_here

# Optional: Database connection pool settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model Configuration (can be changed per use case)
# Text models
AI_MODEL_TEXT=anthropic/claude-sonnet-4.5
AI_MODEL_TEXT_FAST=anthropic/claude-haiku-4.5

# Vision models (for images)
AI_MODEL_VISION=anthropic/claude-sonnet-4.5
AI_MODEL_VISION_FAST=anthropic/claude-haiku-4.5

# Audio transcription
AI_MODEL_AUDIO=openai/whisper-1

# Langfuse Configuration (for prompt management and observability)
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Environment
NODE_ENV=development

# Logging Configuration
# Log levels: DEBUG, INFO, WARN, ERROR, NONE
# Default is INFO
LOG_LEVEL=INFO
